<!DOCTYPE html>
<html ng-app="bunker">
    <head>
        <title>Bunker</title>
        <link rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.css"/>
        <link rel="stylesheet" href="/styles/bunker.css"/>

        <script src="/vendor/jquery/dist/jquery.js"></script>
        <script src="/vendor/angular/angular.js"></script>
        <script src="/vendor/bootstrap/dist/js/bootstrap.js"></script>
        <script src="/vendor/sails.io.js/dist/sails.io.js"></script>
        <script src="/vendor/angular-resource-sails/src/sailsResource.js"></script>
        <script src="/app/bunker.js"></script>
        <script src="/app/bunkerApi.js"></script>
        <script src="/app/room/MessageLogController.js"></script>
        <script src="/app/room/InputController.js"></script>
    </head>
    <body>

        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <span class="navbar-brand">Bunker</span>
                </div>
            </div>
        </nav>

        <div class="container-fluid" fill margin-bottom="34" ng-controller="MessageLogController as log">
            <div class="row">
                <div class="col-md-10">
                    <ol class="list-unstyled">
                        <li ng-repeat="message in log.messages | orderBy:'createdAt'">
                            {{message.text}}
                        </li>
                    </ol>
                </div>
                <div class="col-md-2">
                    <ul class="list-group">

                    </ul>
                </div>
            </div>
        </div>

        <div class="container-fluid" ng-controller="InputController as input">
            <div class="row">
                <form class="col-md-10" style="padding-left: 0" ng-submit="input.sendMessage()">
                    <div class="input-group">
                        <input type="text" class="form-control" ng-model="input.messageText"/>
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-success">Send</button>
                        </span>
                    </div>
                </form>
            </div>
        </div>

    </body>
</html>